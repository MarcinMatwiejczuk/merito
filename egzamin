(train_x, train_y), (test_x, test_y) = keras.datasets.cifar10.load_data()

print('Kształt danych treningowych : ', train_x.shape, train_y.shape)
print('Kształt danych testowych : ', test_x.shape, test_y.shape)

# Liczba unikalnych klas w obrazach
classes = np.unique(train_y)
classes_num = len(classes)
print('Całkowita liczba klas : ', classes_num)
print('Klasy wyjścia : ', classes)
plt.figure(figsize=[10,5])

# Wyświetlenie pierwszego obrazka w danych treningowych
plt.subplot(121)
plt.imshow(train_x[0,:,:], cmap='gray')
plt.title("Wartość prawdziwa : {}".format(train_y[0]))

# Wyświetlenie pierwszego obrazka w danych testowych
plt.subplot(122)
plt.imshow(test_x[0,:,:], cmap='gray')
plt.title("Wartość prawdziwa : {}".format(test_y[0]))
